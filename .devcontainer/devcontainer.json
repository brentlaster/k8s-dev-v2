{
  "name": "Codespace to perform Kubernetes Deep Dive for Developers Labs",
  "remoteEnv": {
    "INSTALLATION_TYPE": "labs"
  },
  "hostRequirements": {
    "cpus": 4,
    "memory": "8gb",
    "storage": "32gb"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "files.autoSave": "onFocusChange",
        "editor.tabSize": 2
      },
      "extensions": [
        "ms-azuretools.vscode-docker"
      ]
    },
    "codespaces": {
      "openFiles": [
        "codespace-labs.md"
      ]
    }
  },
  "postCreateCommand": "(minikube start && ~/k8s-dev-v2/extra/setup-monitoring.sh) || echo 'Could not auto-configure. Skipping.' "
}
